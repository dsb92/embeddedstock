<Application x:Class="PCApplikationMVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:xctk = "http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:pcApplikationMvvm="clr-namespace:PCApplikationMVVM"
             StartupUri="Views\Main.xaml">
    <Application.Resources>
        <vm:ViewModelLocator xmlns:vm="clr-namespace:PCApplikationMVVM"
                                   x:Key="Locator" />

		<pcApplikationMvvm:Categories x:Key="Categories"/>

		<Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="0 5 10 5" />
        </Style>

        <Style TargetType="{x:Type xctk:AutoSelectTextBox}">
            <Setter Property="Margin" Value="0,5,5,5"/>
			
            <Setter Property="AutoSelectBehavior" Value="OnFocus"/>
        </Style>

        <Style TargetType="{x:Type PasswordBox}">
            <Setter Property="Margin" Value="0,5,5,5"/>
        </Style>

        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="IsTodayHighlighted" Value="True"></Setter>
        </Style>

        <Style TargetType="{x:Type Label}">
        </Style>
    </Application.Resources>
</Application>
